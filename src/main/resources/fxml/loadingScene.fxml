<AnchorPane fx:id="PlayerNumberChosenBtn" prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.client.gui.controllers.LoadingController">
   <children>
      <ImageView fitHeight="99.0" fitWidth="322.0" layoutX="319.0" layoutY="119.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@graphics/Title.png" />
         </image>
      </ImageView>
      <Text fx:id="status" layoutX="466.0" layoutY="259.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" textAlignment="CENTER">
