            <Font size="14.0" />
         </font>
      </Text>
      <AnchorPane fx:id="PlayersNumberPane" layoutX="392.0" layoutY="314.0" prefHeight="153.0" prefWidth="200.0">
         <children>
            <RadioButton fx:id="players_2" layoutX="45.0" layoutY="-1.0" mnemonicParsing="false" selected="true" text="2 Players">
               <toggleGroup>
                  <ToggleGroup fx:id="playersNumber" />
